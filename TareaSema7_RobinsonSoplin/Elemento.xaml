<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaSema7_RobinsonSoplin.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar o Eliminar Usuarios"
                 />
            <Entry x:Name="txtNombre" Placeholder="Ingrese el Nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario "/>
            <Entry x:Name="txtContraseña" Placeholder="Ingrese la Contraseña"/>
            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked"/>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>