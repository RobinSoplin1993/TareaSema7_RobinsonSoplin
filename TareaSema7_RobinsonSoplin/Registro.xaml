<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaSema7_RobinsonSoplin.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de Registro"
                 />

            <Entry x:Name ="txtNombre" Placeholder="Ingrese el nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario"/>
            <Entry x:Name="txtContraseña" Placeholder="Ingrese la Contraseña"/>
            <Button x:Name="btnAgregar" Text="Agregar" Clicked="btnAgregar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>