<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaSema7_RobinsonSoplin.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Bienvenido al Sistema" />
            <Entry x:Name="txtUsuario" Placeholder="Ingreso al usuario"/>
            <Entry x:Name="txtContraseña" Placeholder="Ingrese la contraseña"/>
            <Button x:Name="btnIniciar" Text="Iniciar sesion" Clicked="btnIniciar_Clicked"/>
            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>